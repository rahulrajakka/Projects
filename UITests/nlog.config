<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <!-- Log to the console -->
    <target name="logconsole" xsi:type="Console" layout="${longdate}|${level:uppercase=true}|${message}" />

    <!-- Log to a file -->
    <target name="logfile" xsi:type="File" fileName="logs/test-log.txt" layout="${longdate}|${level:uppercase=true}|${message}" />
  </targets>

  <rules>
    <!-- Log INFO and higher level logs (e.g., WARN, ERROR) to both console and file -->
    <logger name="*" minlevel="Info" writeTo="logconsole,logfile" />
  </rules>
</nlog>
